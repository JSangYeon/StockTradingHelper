<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="jsy.stock.stocktradinghelper.viewmodel.StockViewModel" />

        <variable
            name="viewName"
            type="androidx.databinding.ObservableField&lt;String&gt;" />

        <variable
            name="viewPrice"
            type="androidx.databinding.ObservableField&lt;String&gt;" />


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewName}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewPrice}"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_stock_name"
            app:layout_constraintTop_toTopOf="@id/tv_stock_name"
            />

        <Button
            android:id="@+id/btn_add_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            app:layout_constraintTop_toBottomOf="@id/tv_stock_name"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/btn_remove_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_stock_name"
            app:layout_constraintStart_toEndOf="@id/btn_add_stock"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>