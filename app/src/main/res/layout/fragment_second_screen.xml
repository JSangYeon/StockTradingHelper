<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="secondScreen"
            type="jsy.stock.stocktradinghelper.stock.fragment.SecondScreen"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_second_to_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2->1"
            android:onClick="@{()->secondScreen.btnSecondToFirst()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_second_to_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2->3"
            android:onClick="@{()->secondScreen.btnSecondToThird()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_second_to_first"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>